@model MvcSkiOprema.Models.Rezervacija

@{
    ViewBag.Title = "Kreiranje rezervacije";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Rezervacija</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.DatumOd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DatumOd)
            @Html.ValidationMessageFor(model => model.DatumOd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DatumDo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DatumDo)
            @Html.ValidationMessageFor(model => model.DatumDo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Napomena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Napomena)
            @Html.ValidationMessageFor(model => model.Napomena)
        </div>

        <p>
            <input type="submit" value="Pošalji zahtjev" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Povratak", "Index", "ShoppingCart")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
