@model MvcSkiOprema.Models.Rezervacija

@{
    ViewBag.Title = "Ažuriranje rezervacija";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Rezervacija</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserId)
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DatumOd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DatumOd)
            @Html.ValidationMessageFor(model => model.DatumOd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DatumDo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DatumDo)
            @Html.ValidationMessageFor(model => model.DatumDo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Odobreno)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Odobreno, (SelectList)ViewBag.mogucnostiRezervacije, String.Empty)
            @Html.Hidden("prethodnaVrijednost", (int?)ViewBag.prethodnaVrijednost)
            <label id="provjera" style="background-color:@ViewBag.provjera; display:block; width: 62px">_________</label>
            *indikacija preklapanja
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Napomena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Napomena)
            @Html.ValidationMessageFor(model => model.Napomena)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UkupnaCijena)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UkupnaCijena)
            @Html.ValidationMessageFor(model => model.UkupnaCijena)
        </div>

        <p>
            <input type="submit" value="Spremi" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Povratak", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
